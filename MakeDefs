# Settings

# Set MARS_VERSION for development if it isn't set.
ifndef MARS_VERSION
    export MARS_VERSION = 1.x
endif

# Tools

MAN_TOOL = $(TOP_DIR)/bin/mars man
DOC_TOOL = $(TOP_DIR)/bin/mars_doc -docroot $(DOC_ROOT)

